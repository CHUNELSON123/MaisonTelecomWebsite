@page "/checkout-shipping"

<div class="checkout-page">
    <div class="checkout-form">
        <div class="delivery-section">
            <h2>Delivery</h2>
            <div class="delivery-options">
                <label class="radio-option">
                    <input type="radio" name="delivery" value="pickup" />
                    <span>Pickup in store</span>
                </label>
                <label class="radio-option active">
                    <input type="radio" name="delivery" value="ship" checked />
                    <span>Ship</span>
                </label>
            </div>
        </div>

        <div class="address-section">
            <h2>Info/Address</h2>
            <div class="form-row">
                <input type="text" placeholder="First Name" />
                <input type="text" placeholder="Last Name" />
            </div>
            <input type="text" placeholder="Phone Number" />
            <input type="text" placeholder="Address 1" />
            <input type="text" placeholder="Address 2" />
            <input type="text" placeholder="Address 3" />
            <div class="form-row">
                <input type="text" placeholder="Town/City" />
                <select>
                    <option>Region</option>
                </select>
            </div>
            <input type="text" placeholder="Phone Number" />
        </div>

        <div class="payment-section">
            <h2>Payment</h2>
            <p>All transactions are secure and encrypted.</p>
            <div class="payment-methods">
                <p>Payment Methods</p>
                <img src="/Image/payment_methods.png" alt="Payment Methods" />
                <p class="payment-note">After clicking "Pay Now", you will be redirected to Payment methods to complete your purchase securely.</p>
            </div>
        </div>

        <button class="pay-now-button">Pay Now</button>
    </div>

    <div class="order-summary">
        <h2>Order Summary</h2>
        <div class="summary-item">
            <img src="/Image/iphone_thumb.jpg" alt="iPhone" />
            <div>
                <p>Apple iPhone 11 pro</p>
                <p>FCFA 120,000</p>
            </div>
        </div>
        <div class="summary-item">
            <img src="/Image/iphone_thumb.jpg" alt="iPhone" />
            <div>
                <p>Apple iPhone 11 pro</p>
                <p>FCFA 120,000</p>
            </div>
        </div>
        <div class="summary-item">
            <img src="/Image/iphone_thumb.jpg" alt="iPhone" />
            <div>
                <p>Apple iPhone 11 pro</p>
                <p>FCFA 120,000</p>
            </div>
        </div>
        <hr />
        <div class="summary-total">
            <p>Subtotal: 3 items <span>FCFA 360,000</span></p>
            <p>Shipping <span>FCFA 6,000</span></p>
        </div>
        <hr />
        <div class="summary-grand-total">
            <p>Total <span>FCFA 366,000</span></p>
        </div>
    </div>
</div>