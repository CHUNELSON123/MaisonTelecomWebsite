@page "/cart"

<div class="cart-page">
    <div class="cart-header">
        <h1>Your Cart</h1>
        <button class="continue-shopping">Continue Shopping</button>
    </div>

    <div class="cart-items">
        <div class="cart-item">
            <img src="/Image/iphone.jpg" alt="Apple iPhone 11 Pro" class="item-image" />
            <div class="item-details">
                <p class="item-brand">Apple</p>
                <p class="item-name">iPhone 11 Pro</p>
                <p class="item-specs">6GB RAM, 128GB ROM</p>
                <p class="item-price">FCFA 120,000</p>
                <p class="item-state">State: New</p>
            </div>
            <div class="item-actions">
                <div class="quantity-selector">
                    <button>-</button>
                    <span>1</span>
                    <button>+</button>
                </div>
                <a href="#" class="remove-link">Remove</a>
            </div>
            <div class="item-total-price">
                <p>FCFA 120,000</p>
            </div>
        </div>
        <div class="cart-item">
            <img src="/Image/iphone.jpg" alt="Apple iPhone 11 Pro" class="item-image" />
            <div class="item-details">
                <p class="item-brand">Apple</p>
                <p class="item-name">iPhone 11 Pro</p>
                <p class="item-specs">6GB RAM, 128GB ROM</p>
                <p class="item-price">FCFA 120,000</p>
                <p class="item-state">State: New</p>
            </div>
            <div class="item-actions">
                <div class="quantity-selector">
                    <button>-</button>
                    <span>1</span>
                    <button>+</button>
                </div>
                <a href="#" class="remove-link">Remove</a>
            </div>
            <div class="item-total-price">
                <p>FCFA 120,000</p>
            </div>
        </div>
        <div class="cart-item">
            <img src="/Image/iphone.jpg" alt="Apple iPhone 11 Pro" class="item-image" />
            <div class="item-details">
                <p class="item-brand">Apple</p>
                <p class="item-name">iPhone 11 Pro</p>
                <p class="item-specs">6GB RAM, 128GB ROM</p>
                <p class="item-price">FCFA 120,000</p>
                <p class="item-state">State: New</p>
            </div>
            <div class="item-actions">
                <div class="quantity-selector">
                    <button>-</button>
                    <span>1</span>
                    <button>+</button>
                </div>
                <a href="#" class="remove-link">Remove</a>
            </div>
            <div class="item-total-price">
                <p>FCFA 120,000</p>
