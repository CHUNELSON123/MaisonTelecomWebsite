@page "/admin/products/add"
@layout MaisonTelecom.Components.Layout.AdminLayout

<div class="admin-page-container">
    <h1 class="admin-page-title">Add Product</h1>
    <div class="admin-content-box">
        <div class="admin-content-header">
            <h2>Add New Product</h2>
            <a href="/admin/products" class="back-button">Back</a>
        </div>
        <div class="admin-form-container">
            <div class="form-group">
                <label>Product Name:</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label>Product Brand:</label>
                <select>
                    <option></option>
                </select>
            </div>
            <div class="form-group">
                <label>Product Price:</label>
                <input type="text" />
            </div>
            <div class="form-group product-spec">
                <label>Product Spec:</label>
                <select>
                    <option>RAM</option>
                </select>
                <select>
                    <option>ROM</option>
                </select>
            </div>
            <div class="form-group product-spec">
                <label></label>
                <input type="text" placeholder="Processor" />
                <input type="text" placeholder="EDisplay" />
            </div>
            <div class="form-group">
                <label>Stock Quantity:</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label>Basic Specs:</label>
                <textarea></textarea>
            </div>
            <div class="form-group">
                <label>Display Properties:</label>
                <textarea></textarea>
            </div>
            <div class="form-group">
                <label>Special Features:</label>
                <textarea></textarea>
            </div>
            <div class="form-group">
                <label>Image Upload:</label>
                <div class="image-upload-container">
                    <input type="file" />
                    <input type="file" />
                    <input type="file" />
                    <input type="file" />
                    <input type="file" />
                </div>
            </div>
            <div class="form-group">
                <label>Image URL 1:</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label>Image URL 2:</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label>Image URL 3:</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label>Image URL 4:</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label>Image URL 5:</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label>Trending Product:</label>
                <input type="radio" /> Yes
                <input type="radio" /> No
            </div>
            <div class="form-group">
                <label>Laatest Product:</label>
                <input type="radio" /> Yes
                <input type="radio" /> No
            </div>
            <div class="form-actions">
                <button class="saved-button">Saved</button>
                <button class="cancel-button">Cancel</button>
            </div>
        </div>
    </div>
</div>